<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatApp.Mobile.Views.MainPage"
             Title="Login">

    <!--<StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin Forms and Prism!" />
    </StackLayout>-->

    <Grid RowDefinitions="*,*,*">

        <StackLayout Grid.Row="1"
                    Margin="20,0 " >
            <Entry Text="{Binding Email}" Placeholder="Email"></Entry>
            <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True"> </Entry>
            
            <Frame Style="{StaticResource ButtonFrameStyle}" >
                <Button Style="{StaticResource ButtonStyle}"  
                        Text="Sign In" Command="{Binding SignInCommand}"/>
                
                
            </Frame>
        </StackLayout>
        
    </Grid>

</ContentPage>